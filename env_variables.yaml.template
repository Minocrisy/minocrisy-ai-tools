# Minocrisy AI Tools - Environment Variables for Google Cloud App Engine
# IMPORTANT: This is a template file. Copy to env_variables.yaml and add your actual API keys.
# DO NOT commit env_variables.yaml to source control!

env_variables:
  # Security
  SECRET_KEY: "your-secret-key-here"  # Generate a strong random key for Flask sessions
  
  # ElevenLabs API (Text-to-Speech)
  ELEVENLABS_API_KEY: "your-elevenlabs-api-key"
  ELEVENLABS_VOICE_ID: "your-voice-id"  # e.g., "21m00Tcm4TlvDq8ikWAM" for Rachel
  
  # OpenAI API (Image Generation)
  OPENAI_API_KEY: "your-openai-api-key"
  
  # RunwayML API (Animation)
  RUNWAYML_API_KEY: "your-runwayml-api-key"
  
  # xAI API (Grok)
  XAI_API_KEY: "your-xai-api-key"
  XAI_API_URL: "https://api.xai.com/v1"
  
  # Hedra API
  HEDRA_API_KEY: "your-hedra-api-key"
  HEDRA_API_URL: "https://api.hedra.com/v1"
  
  # Google Cloud Project ID (for Secret Manager)
  GCP_PROJECT_ID: "your-gcp-project-id"
